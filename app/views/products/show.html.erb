<div class="row">
  <div class="col-md-6 col-md-offset-right-1 col-md-offset-1 col-sm-12">
    <div class="caption-content">
      <%= image_tag 'shrimp_roll.png', class: 'img-responsive' %>
    </div>

  </div>

  <div class="col-md-4 col-sm-12">
    <br><br>
    <div> <h4> &nbsp &nbsp  &nbsp &nbsp <%= @product.name %> </h4> </div>
  	<div> <h4> &nbsp &nbsp  &nbsp &nbsp $<%= @product.price %></h4> </div>
    <br><br>
  </div>

  <div class="col-md-4 col-sm-12 col-centered">
      <div class="input-group" style="width:150px;">
        <div class="spinner-buttons input-group-btn">
          <button type="button" class="btn spinner-up blue">
          <i class="fa fa-minus"></i>
          </button>
        </div>
        <input type="text" class="spinner-input form-control" maxlength="3" value="0">
        <div class="spinner-buttons input-group-btn">
          <button type="button" class="btn spinner-down red">
          <i class="fa fa-plus"></i>
          </button>
        </div>
      </div>
    </div>

  <div class="col-md-4 col-sm-12 col-centered">
  <br><br>
    <%= link_to "加入購物車", add_to_cart_products_path(product_id: @product.id),class: "btn btn-danger btn-lg" %>
  <br><br>
  </div>
